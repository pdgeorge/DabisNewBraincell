{
    "programs": [
        {
            "type": "function",
            "function": {
                "name": "timeout_user",
                "description": "Timeout one user for a period of time of your choice.",
                "parameters": {
                    "type": "object",
                    "properties": {
                        "callers_name": {
                            "type": "string",
                            "description": "Twitch user name who called the function"
                        },
                        "user_name": {
                            "type": "string",
                            "description": "Twitch user name"
                        },
                        "length": {
                            "type": "number",
                            "description": "Length of time in seconds"
                        }
                    },
                    "required": [
                        "callers_name",
                        "user_name",
                        "length"
                    ]
                }
            }
        },
        {
            "type": "function",
            "function": {
                "name": "inspire",
                "description": "Create a shareable inspirational card/overlay. Use this when the user asks to inspire, motivate, hype up, pep talk, rally the team, or needs a short inspirational line for stream or socials. You must invent a 5-10 word headline and pass it as `speech`.",
                "parameters": {
                    "type": "object",
                    "properties": {
                        "speech": {
                            "type": "string",
                            "description": "Exactly 5-10 words. No emojis, no hashtags, no quotes. Example: 'This hill is yours today'.",
                            "pattern": "^(?:\\S+\\s+){4,9}\\S+$"
                        },
                        "background": {
                            "type": "string",
                            "description": "Choose a backdrop image for your epic speech."
                        }
                    },
                    "required": [
                        "speech",
                        "background"
                    ]
                }
            }
        },
        {
            "type": "function",
            "function": {
                "name": "get_current_weather",
                "description": "Get current weather information",
                "parameters": {
                    "type": "object",
                    "properties": {
                        "location": {
                            "type": "string",
                            "description": "City name"
                        },
                        "unit": {
                            "type": "string",
                            "enum": [
                                "celsius",
                                "fahrenheit"
                            ]
                        }
                    },
                    "required": [
                        "location"
                    ]
                }
            }
        }
    ]
}